{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@sd/product-feedback-ui-components": [
        "libs/product-feedback/ui/src/index.ts"
      ],
      "@sd/product-feedback/feature/comment": [
        "libs/product-feedback/feature/comment/src/index.ts"
      ],
      "@sd/product-feedback/feature/feedback": [
        "libs/product-feedback/feature/feedback/src/index.ts"
      ],
      "@sd/product-feedback/feature/product": [
        "libs/product-feedback/feature/product/src/index.ts"
      ],
      "@sd/product-feedback/feature/roadmap": [
        "libs/product-feedback/feature/roadmap/src/index.ts"
      ],
      "@sd/react-component-types": [
        "libs/shared/util/component-types/src/index.ts"
      ],
      "@sd/shared/util/styles": ["libs/shared/util/styles/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
